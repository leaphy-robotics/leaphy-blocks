{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": [
            "error", {
                "argsIgnorePattern": "block"
            }
        ]
    },
    "ignorePatterns": [
        "blocks/lists.js",
        "blocks/logic.js",
        "blocks/loops.js",
        "blocks/math.js",
        "blocks/procedures.js",
        "blocks/text.js",
        "blocks/variables.js",
        "blocks/variables_dynamic.js"
    ],
    "globals": {
      "Msg": "readonly",
      "Xml": "readonly"
    }
}
